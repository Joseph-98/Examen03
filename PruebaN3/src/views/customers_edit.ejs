<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id_ciclovia %>" method="POST">
          <div class="form-group">
            <input type="text" name="Calle_Inicio" value="<%= data.calle_inicio%>" placeholder="Calle Inicio" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="Calle_fin" value="<%= data.calle_fin%>" placeholder="Calle Fin" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="Latitud" value="<%= data.Latitud%>" placeholder="Latitud" class="form-control">
          </div>
           <div class="form-group">
            <input type="text" name="Longitud" value="<%= data.Longitud%>" placeholder="Longitud" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Guardar ciclovia
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
